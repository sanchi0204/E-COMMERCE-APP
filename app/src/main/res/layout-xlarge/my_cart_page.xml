<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="16dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/order_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/cart_prod_image"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/prod_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ar_selfie" />

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/cart_prod_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent" android:fontFamily="@font/rajdhani_medium"
                        android:text="@string/prod_name"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="45sp"
                        android:layout_margin="10dp"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/cart_prod_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:text="@string/prod_price"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="45sp"
                        android:layout_margin="10dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/cart_prod_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/description1"
                        android:textAllCaps="false"
                        android:textColor="@color/grey"
                        android:layout_margin="10dp"
                        android:textSize="45sp"
                        android:textStyle="normal" />




                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_to_wish_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/addTo_wishList"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/button_box_purple"
                    >

                    <ImageView
                        android:contentDescription="@string/cat_desc"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wishlist"

                        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wishlist"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textAllCaps="true"
                android:textColor="#FFF"
              android:textAlignment="center"
                android:layout_gravity="center_vertical"
                />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/remove_cart"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@drawable/button_box_purple"
                    android:layout_marginStart="110dp"
                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:contentDescription="@string/remove_cart"
                        android:src="@drawable/remove_cart"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/remove_cart"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textAllCaps="true"
                        android:textColor="#FFF"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        />


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>