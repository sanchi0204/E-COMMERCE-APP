<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyOrders"
    android:orientation="vertical"
    >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_orders_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    </androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/help_centre"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/button_outline"
            android:gravity="center_vertical"
            android:text="@string/help_centre"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/color_purple"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_above="@+id/shop_more"
            android:layout_margin="16dp"
            />

        <TextView
            android:id="@+id/shop_more"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:background="@color/color_purple"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/shop_more"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"/>

</RelativeLayout>